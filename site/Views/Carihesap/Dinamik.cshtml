
@{
    ViewBag.Title = "Dinamik";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Dinamik</h2>

@*Adım 1*@
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Cari İşlemleri</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Cari Girişi</button>
        </div>
    </div>
    @*Fatura Listesi*@

    @foreach (var item in Model.deger3)
    {
        <div class="panel-body">
            <table class="table table-striped table-responsive">
                <tbody>
                    <tr>
                        <td>Cari Kodu : @item.CariKodu</td>
                        <td>Ünvan : @item.Tanim</td>
                        <td>Şehir : @item.Sehir</td>
                        <td>Ülke : @item.Ulke</td>


                    </tr>

                    <tr>
                        <td colspan="4">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Adres</th>
                                        <th>İlçe</th>
                                        <th>Telefon Numarası</th>
                                        <th>Fax Numarası</th>
                                        <th>E-mail</th>
                                        <th>Web Adresi</th>
                                        <th>Posta Kodu</th>
                                        <th>Aktif</th>
                                    </tr>
                                   
                                    @foreach (var order in item.Caris)
                                    {
                                        <tr>
                                            <td>@order.Adres</td>
                                            <td>@order.Ilce</td>
                                            <td>@order.Tel</td>
                                            <td>@order.Fax</td>
                                            <td>@order.Email</td>
                                            <td>@order.Web</td>
                                            <td>@order.PostKodu</td>
                                            <td>@order.Aktif</td>
                                        </tr>
                                        
                                    }
                                </tbody>
                            </table>
                            
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>}
</div>

@*Adım 2*@

<div class="modal fade" id="newOrderModal">
    <div class="modal-dialog modal-lg" style=" width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Yeni Cari Girişi</h4>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    @*Cari Details*@
                    <h5 style="color:#ff6347">Fatura Detayları</h5>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="Cari_ID" />
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Cari Kodu
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="CariKodu" name="CariKodu" placeholder="Cari Kodu" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Tanım
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Tanim" name="Tanim" placeholder="Tanım" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Ülke
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Ulke" name="Ulke" placeholder="Ülke" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Şehir
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Sehir" name="Sehir" placeholder="Şehir" class="form-control" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Müşteri Ünvanı
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Tanim" name="Tanim" placeholder="Cari" class="form-control" />
                            </div>

                        </div>
                    </div>
                    @*Cari Detay*@

                   
                    

                    <h5 style="margin-top:10px;color:#ff6347">CARİ</h5>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="id" />
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Adres
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Adres" name="Adres" placeholder="Adres Giriniz" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                İlçe
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Ilce" name="Ilce" placeholder="İlçe" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Telefon Numarası
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Tel" name="Tel" placeholder="Telefon Numarası" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Fax Numarası
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Fax" name="Fax" placeholder="Fax Numarası Giriniz" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                E-mail
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Email" name="Email" placeholder="E-posta" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Web Adresi
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Web" name="Web" placeholder="Web adres" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Posta Kodu
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="PostaKodu" name="PostaKodu" placeholder="Posta Kodu" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Aktif
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Aktif" name="Aktif" placeholder="Aktif" class="form-control" />
                            </div>
                            <div class="col-md-2 col-lg-offset-4">
                                <a id="addToList" class="btn btn-primary">Listeye Ekle</a>
                            </div>
                        </div>
                       
                        <table id="detailsTable" class="table">
                            <thead>
                                <tr>
                                    <th style="width:30%">Adres</th>
                                    <th style="width:20%">İlçe</th>
                                    <th style="width:15%">Telefon Numarası</th>
                                    <th style="width:15%">Fax Numarası</th>
                                    <th style="width:25%">E-mail</th>
                                    <th style="width:25%">Web Adresi</th>
                                    <th style="width:25%">Posta Kodu</th>
                                    <th style="width:25%">Aktif</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button id="saveOrder" type="submit" class="btn btn-danger">Cariyi Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*Adım 3*@

@section scripts{
    <script>
//Show Modal.
        function addNewOrder() {
            $("#newOrderModal").modal();
        }
        //Add Multiple Order.
        $("#addToList").click(function (e) {
            e.preventDefault();

            if ($.trim($("#CariKodu").val()) == "" || $.trim($("#Tanim").val()) == "" || $.trim($("#Ulke").val()) == "" || $.trim($("#Sehir").val()) == "") return;

            var CariKodu = $("#CariKodu").val(),
                Tanim = $("#Tanim").val(),
                Ulke = $("#Ulke").val(),
                Sehir = $("#Sehir").val(),
                detailsTableBody = $("#detailsTable tbody");

            var degerler = '<tr><td>' + + '</td><td>' + CariKodu + '</td><td>' + Tanim + '</td><td>' + Ulke + '</td><td>' + Sehir + '</td><td><a data-itemId="0" href="#" class="deleteItem">Çıkar</a></td></tr>';
            detailsTableBody.append(degerler);
            clearItem();
        });
        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#CariKodu").val('');
            $("#Tanim").val('');
            $("#Ulke").val('');
            $("#Sehir").val('');
        }
        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        //After Click Save Button Pass All Data View To Controller For Save Database
        function saveOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/Carihesap/FaturaKaydet",
                data: data,
                success: function (result) {
                    alert(result);
                    location.reload();
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        //Collect Multiple Order List For Pass To Controller
        $("#saveOrder").click(function (e) {
            e.preventDefault();

            var orderArr = [];
            orderArr.length = 0;

            $.each($("#detailsTable tbody tr"), function () {
                orderArr.push({
                    CariKodu: $(this).find('td:eq(0)').html(),
                    Tanim: $(this).find('td:eq(1)').html(),
                    Ulke: $(this).find('td:eq(2)').html(),
                    Sehir: $(this).find('td:eq(3)').html(),
                 
                });
            });


            var data = JSON.stringify({
                Adres: $("#Adres").val(),
                İlce: $("#Ilce").val(),
                Tel: $("#Tel").val(),

                Fax: $("#Fax").val(),
                Email: $("#Email").val(),
                Web: $("#Web").val(),
                PostaKodu: $("#PostaKodu").val(),
                Aktif: $("#Aktif").val(),
            
            });

            $.when(saveOrder(data)).then(function (response) {
                console.log(response);
            }).fail(function (err) {
                console.log(err);
            });
        });</script>
}