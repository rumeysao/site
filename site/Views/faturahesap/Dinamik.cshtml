
@{
    ViewBag.Title = "Dinamik";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Dinamik</h2>

@*Adım 1*@
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Fatura & Kalem İşlemleri</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Fatura Girişi</button>
        </div>
    </div>
    @*Fatura Listesi*@

    @foreach (var item in Model.deger1)
    {
<div class="panel-body">
    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <td>Seri-SıraNo : @item.FaturaSeriNo-@item.FaturaSiraNo</td>
                <td>Cari : @item.Cari_ID</td>
                <td>Tarih : @item.Tarih</td>

               
            </tr>
            
            <tr>
                <td colspan="4">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Açıklama</th>
                                <th>Miktar</th>
                                <th>Fiyat</th>
                                <th>Tutar</th>
                                <th>KDV</th>
                            </tr>
                            @{ var totalBill = 0; }
                            @foreach (var order in item.FaturaSatirlaris)
                            {
                                <tr>
                                    <td>@order.Aciklama</td>
                                    <td>@order.Miktar</td>
                                    <td>@order.Birim</td>
                                    <td>@order.Tutar</td>
                                    <td>@order.KDV</td>
                                </tr>
totalBill = totalBill + @Convert.ToInt32(order.Tutar);
                            }
                        </tbody>
                    </table>
                    <span class="pull-right" style="margin-right:100px;"><strong>Fatura Toplam Tutar :  </strong> @totalBill</span>
                </td>
            </tr>
        </tbody>
    </table>
</div>}
</div>

@*Adım 2*@

<div class="modal fade" id="newOrderModal">
    <div class="modal-dialog modal-lg" style=" width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Yeni Fatura Girişi</h4>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    @*Fatura Details*@
                    <h5 style="color:#ff6347">Fatura Detayları</h5>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="Faturaid" />
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Seri No
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="FaturaSeriNo" name="FaturaSeriNo" placeholder="Seri Numarası" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Sıra No
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="FaturaSiraNo" name="FaturaSiraNo" placeholder="Sıra Numarası" class="form-control" />
                            </div>
                        </div>
                    

                        <div class="form-group">
                            @*<label class="control-label col-md-2">
                                Teslim Alan
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Tanim" name="Tanim" placeholder="Cari" class="form-control" />
                            </div>*@
                            <label class="control-label col-md-2">
                                Toplam Tutar
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Toplam" name="Toplam" placeholder="Toplam Tutar" class="form-control" />
                            </div>
                        </div>
                    </div>
                    @*Fatura Kalemleri*@
                    <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemleri</h5>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="id" />
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Açıklama
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Aciklama" name="Aciklama" placeholder="Ürün / Birim Açıklamasını Giriniz" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Fiyat
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="Birim" name="Birim" placeholder="Birim Başına Fiyat Miktarı" class="form-control" />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Miktar
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="Miktar" name="Miktar" placeholder="Miktar Giriniz" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                KDV
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="KDV" name="KDV" placeholder="KDV Giriniz" class="form-control" />
                            </div>
                            <div class="col-md-2 col-lg-offset-4">
                                <a id="addToList" class="btn btn-primary">Listeye Ekle</a>
                            </div>
                        </div>

                        <table id="detailsTable" class="table">
                            <thead>
                                <tr>
                                    <th style="width:30%">Açıklama</th>
                                    <th style="width:20%">Miktar</th>
                                    <th style="width:15%">Fiyat</th>
                                    <th style="width:15%">KDV</th>
                                    <th style="width:25%">Tutar</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button id="saveOrder" type="submit" class="btn btn-danger">Faturayı Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*Adım 3*@

@section scripts{
    <script>//Show Modal.
        function addNewOrder() {
            $("#newOrderModal").modal();
        }
        //Add Multiple Order.
        $("#addToList").click(function (e) {
            e.preventDefault();

            if ($.trim($("#Aciklama").val()) == "" || $.trim($("#Birim").val()) == "" || $.trim($("#Miktar").val()) == "") return;

            var Aciklama = $("#Aciklama").val(),
                Birim = $("#Birim").val(),
                Miktar = $("#Miktar").val(),
                KDV = $("#KDV").val(),
                detailsTableBody = $("#detailsTable tbody");

            var degerler = '<tr><td>' + Aciklama + '</td><td>' + Miktar + '</td><td>' + Birim + '</td><td>' + KDV + '</td><td>' + ((parseFloat(Birim) * parseInt(Miktar)) * (parseFloat(KDV) / 100) + (parseFloat(Birim) * parseInt(Miktar)))+ '</td><td><a data-itemId="0" href="#" class="deleteItem">Çıkar</a></td></tr>';
            detailsTableBody.append(degerler);
            clearItem();
        });
        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#Aciklama").val('');
            $("#Birim").val('');
            $("#Miktar").val('');
            $("#KDV").val('');
        }
        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        //After Click Save Button Pass All Data View To Controller For Save Database
        function saveOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/faturahesap/FaturaKaydet",
                data: data,
                success: function (result) {
                    alert(result);
                    location.reload();
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        //Collect Multiple Order List For Pass To Controller
        $("#saveOrder").click(function (e) {
            e.preventDefault();

            var orderArr = [];
            orderArr.length = 0;

            $.each($("#detailsTable tbody tr"), function () {
                orderArr.push({
                    Aciklama: $(this).find('td:eq(0)').html(),
                    Miktar: $(this).find('td:eq(1)').html(),
                    Birim: $(this).find('td:eq(2)').html(),
                    KDV: $(this).find('td:eq(3)').html(),
                    Tutar: $(this).find('td:eq(4)').html()
                });
            });


            var data = JSON.stringify({
                FaturaSeriNo: $("#FaturaSeriNo").val(),
                FaturasiraNo: $("#FaturasiraNo").val(),
                Tarih: $("#Tarih").val(),
            
                Tanim: $("#Tanim").val(),
                Toplam: $("#Toplam").val(),
                kalemler: orderArr
            });

            $.when(saveOrder(data)).then(function (response) {
                console.log(response);
            }).fail(function (err) {
                console.log(err);
            });
        });</script>
}