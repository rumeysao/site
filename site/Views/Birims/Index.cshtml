@model IEnumerable<site.Models.Birim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<head><link href="~/Content/StyleSheet3.css" rel="stylesheet" /></head>





<link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Birim İşlemleri</strong>
            </h2>
            <button style="margin-right:10px" class="btn pull-right" > @Html.ActionLink("Ekle", "Create", "Birims", new { area = "" })</button>
        </div>
    </div>
    <table id="personel">
        <tr>

            <th>
                Birim Kodu
            </th>
            <th>
                Birim Adı
            </th>
            <th></th>
        </tr>
    
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirimKodu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirimAdi)
                    </td>


                    <td>

                        @Html.ActionLink("Güncelle", "Edit", new { id = item.Birim_ID })
                        @Html.ActionLink("İncele", "Details", new { id = item.Birim_ID })
                   


                    </td>
                </tr>

        }

        </table>
    </div>
  
  