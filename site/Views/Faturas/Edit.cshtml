@model site.Models.Fatura

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Fatura</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Fatura_ID)

    <div class="form-group">
        <div class="control-label col-md-2"><b>Fatura Seri No</b></div>

        <div class="col-md-10">
            @Html.EditorFor(model => model.FaturaSeriNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FaturaSeriNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Fatura Sıra No</b></div>

        <div class="col-md-10">
            @Html.EditorFor(model => model.FaturaSiraNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FaturaSiraNo, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="control-label col-md-2"><b>Tutar</b></div>

        <div class="col-md-10">
            @Html.EditorFor(model => model.Tutar, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tutar, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2"><b>Fatura Satırları</b></div>
        <div class="col-md-10">
            @Html.DropDownList("Faturasatirlari_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FaturaSatirlari.Faturasatirlari_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Birim</b></div>
        <div class="col-md-10">
            @Html.DropDownList("Birim_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Birim.Birim_ID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2"><b>Müşteri </b></div>
        <div class="col-md-10">
            @Html.DropDownList("Cari_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Cari_ID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
