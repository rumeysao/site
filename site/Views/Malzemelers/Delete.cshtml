@model site.Models.Malzemeler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Malzemeler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Malzeme Kodu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MalzemeKodu)
        </dd>

        <dt>
            Malzeme Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MalzemeAdi)
        </dd>

        <dt>
            Özel Kod
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OzelKod)
        </dd>

  

        <dt>
            Birim Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birim.BirimAdi)
        </dd>

      
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
