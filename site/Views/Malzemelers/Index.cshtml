@model IEnumerable<site.Models.Malzemeler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Content/StyleSheet3.css" rel="stylesheet" />


<link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Malzeme İşlemleri</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Malzeme Girişi</button>
        </div>
    </div>
    <table id="personel">
        <tr>
            <th>
                Malzeme Kodu
            </th>
            <th>
                Malzeme Adı
            </th>
            <th>
                Özel Kod
            </th>

            <th>
                Birim
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MalzemeKodu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MalzemeAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OzelKod)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Birim.BirimKodu)
                </td>


                <td class="context-menu">
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Malzeme_ID }) |
                    @Html.ActionLink("İncele", "Details", new { id = item.Malzeme_ID }) |
                   
                </td>

            </tr>
        }

    </table>
    <div class="modal fade" id="newOrderModal">
        <div class="modal-dialog modal-lg" style=" width: 900px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Yeni Malzeme Girişi</h4>
                </div>
                <form id="NewOrderForm">
                    <div class="modal-body">
                        @*Malzeme Details*@
                        <h5 style="color:#ff6347">Malzeme Detayları</h5>
                        <hr />
                        <div class="form-horizontal">
                            <input type="hidden" id="Malzeme_ID" />
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Malzeme Kodu
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="MalzemeKodu" name="MalzemeKodu" placeholder="Malzeme Kodu" class="form-control" />
                                </div>
                                <label class="control-label col-md-2">
                                    Malzeme Tanımı
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="MalzemeAdi" name="MalzemeAdi" placeholder="Malzeme Adı" class="form-control" />
                                </div>
                                <label class="control-label col-md-2">
                                    Özel Kod
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="OzelKod" name="OzelKod" placeholder="Özel Kod" class="form-control" />
                                </div>
                                
                            </div>


                        </div>

                        @*Malzeme Detay*@




                        <h5 style="margin-top:10px;color:#ff6347">Malzeme</h5>
                        <hr />
                        <div class="form-horizontal">
                            <input type="hidden" id="id" />
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Oluşturma Tarihi
                                </label>
                                <div class="col-md-4">
                                    <input type="datetime-local" id="OlusturmaTarihi" name="OlusturmaTarihi" placeholder="Oluşturma Tarihi" class="form-control" />
                                </div>
                                <label class="control-label col-md-2">
                                    Düzenleme Tarihi
                                </label>
                                <div class="col-md-4">
                                    <input type="datetime-local" id="DuzenlemeTarihi" name="DuzenlemeTarihi" placeholder="Düzenleme Tarihi" class="form-control" />
                                </div>
                                <div class="col-md-2 col-lg-offset-4">
                                    <a id="addToList" class="btn btn-primary">Listeye Ekle</a>
                                </div>
                            </div>


                            <table id="detailsTable" class="table">
                                <thead>
                                    <tr>
                                        <th style="width:30%">Oluşturma Tarihi</th>
                                        <th style="width:20%">Düzenlenme Tarihi</th>
                                        

                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-default" data-dismiss="modal">Kapat</button>
                        <button id="saveOrder" type="submit" class="btn btn-danger">Malzemeyi Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <script>
        function addNewOrder() {
            $("#newOrderModal").modal();
        }
    </script>
    <script src="http://code.jquery.com/jquery-latest.js"></script>



