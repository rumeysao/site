@model site.Models.Malzemeler

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-group">
    <label class="control-label col-md-2">
        Malzeme Kodu
    </label>

    <div class="col-md-4">
        @Html.EditorFor(model => model.MalzemeKodu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MalzemeKodu, "", new { @class = "text-danger" })
    </div>
    <label class="control-label col-md-2">
        Malzeme Adı
    </label>

    <div class="col-md-4">
        @Html.EditorFor(model => model.MalzemeAdi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MalzemeAdi, "", new { @class = "text-danger" })
    </div>
    <label class="control-label col-md-2">
        Özel Kod
    </label>
    <div class="col-md-4">
        @Html.EditorFor(model => model.OzelKod, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.OzelKod, "", new { @class = "text-danger" })
    </div>

    <label class="control-label col-md-2">
        Birim
    </label>

    <div class="col-md-4">
        @Html.DropDownList("Birim_ID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Birim.Birim_ID, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
