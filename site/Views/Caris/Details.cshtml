@model site.Models.Cari

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link href="~/Content/StyleSheet3.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Montserrat:100,300" rel="stylesheet">

<div class="modal-content">
    <form id="NewOrderForm">
        <div class="modal-body">

            <h5 style="color:royalblue">Cari Detayları</h5>
            <hr />
            <div class="form-horizontal">

                <table id="detailsTable" class="table">

                    <thead>
                        <tr>
                            <th> Cari Kodu</th>
                            <th> Müşteri Ünvanı</th>
                            <th>Adres </th>
                            <th> Ülke</th>
                            <th> Şehir</th>
                            <th>İlçe </th>
                            <th> Telefon Numarası</th>
                            <th> Fax Numarası</th>
                            <th>E-mail </th>
                            <th>  Web Adresi</th>
                            <th> Posta Kodu </th>
                            <th> Aktif</th>
                        </tr>
                        <tr>

                            <td>
                                @Html.DisplayFor(model => model.CariKodu)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Tanim)
                            </td>


                            <td>
                                @Html.DisplayFor(model => model.Adres)
                            </td>



                            <td>
                                @Html.DisplayFor(model => model.Ulke)
                            </td>


                            <td>
                                @Html.DisplayFor(model => model.Sehir)
                            </td>


                            <td>
                                @Html.DisplayFor(model => model.Ilce)
                            </td>



                            <td>
                                @Html.DisplayFor(model => model.Tel)
                            </td>



                            <td>
                                @Html.DisplayFor(model => model.Fax)
                            </td>
                            

                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>


                            <td>
                                @Html.DisplayFor(model => model.Web)
                            </td>



                            <td>
                                @Html.DisplayFor(model => model.PostaKodu)
                            </td>



                            <td>
                                @Html.DisplayFor(model => model.Aktif)
                            </td>



                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>


            </div>

        </div>

    </form>
</div>

<p>
    @Html.ActionLink("Güncelle", "Edit", new { id = Model.Cari_ID }) |
    @Html.ActionLink("Geri Dön", "Index")
</p>
