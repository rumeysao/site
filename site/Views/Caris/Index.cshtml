@model IEnumerable<site.Models.Cari>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    


}
<head>
<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    </head>

<p>
    @Html.ActionLink("Yeni Ekle", "Create")
</p>

<div style="overflow-x:auto;">
    <table>
        <tr>
            <th>
                Cari Kodu
            </th>
            <th>
                Tanım
            </th>
            <th>
                Ülke
            </th>
            <th>
                Şehir
            </th>
            <th>
                İlçe
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CariKodu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tanim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ulke)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sehir)
                </td>

                <td>
                  
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.Cari_ID })
                        @Html.ActionLink("İncele", "Details", new { id = item.Cari_ID })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Cari_ID })
                 
                </td>
            </tr>
        }
    </table>
</div>

